# Pulumi Lab environment configuration

# Add Pulumi to PATH
export PATH="$HOME/.pulumi/bin:$PATH"

# Python virtual environment
if [[ -d .venv ]]; then
    source .venv/bin/activate
fi

# Pulumi configuration
export PULUMI_BACKEND_URL="file://~/.pulumi"
export PULUMI_CONFIG_PASSPHRASE=""

# LocalStack configuration (for local AWS development)
export AWS_ENDPOINT_URL="http://localhost:4566"
export AWS_ACCESS_KEY_ID="test"
export AWS_SECRET_ACCESS_KEY="test"
export AWS_DEFAULT_REGION="us-east-1"

# Project-specific paths
export PULUMI_LAB_ROOT="$(pwd)"
export PULUMI_LAB_EXPERIMENTS="$PULUMI_LAB_ROOT/experiments"