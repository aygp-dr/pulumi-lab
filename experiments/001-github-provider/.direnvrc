#!/usr/bin/env bash
# Load environment variables for GitHub provider

if [ -f .env ]; then
    echo "Loading GitHub environment variables..."
    set -a
    source .env
    set +a
else
    echo "Warning: .env file not found. Copy .env.example to .env and add your GitHub token."
fi

# Check for virtual environment
if [ -f ../../.venv/bin/activate ]; then
    echo "Activating Python virtual environment..."
    source ../../.venv/bin/activate
fi